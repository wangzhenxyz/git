<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weatherdetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/weather_all_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weather_tip_blue_bg" >
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:text="@string/title"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <Button
            android:id="@+id/fresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="382px"
            android:background="@drawable/details_activity_fresh"
            android:paddingTop="22dp"
            android:text="@string/refesh"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/choosecity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="168px"
            android:background="@drawable/details_activity_choosecity"
            android:paddingTop="22dp"
            android:text="@string/choose_city"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/back_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/details_activity_back"
            android:paddingTop="22dp"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/freshbutton"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignLeft="@+id/fresh_button"
            android:layout_alignTop="@+id/textView1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10px"
            android:background="@drawable/weather_refresh" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12px"
        android:gravity="center"
  >

        <cn.flyaudio.weather.view.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="659dp"
            android:layout_height="294dp"
            android:duplicateParentState="true"
          
            android:gravity="center"
         >
        </cn.flyaudio.weather.view.ViewFlow>
    </LinearLayout>

</LinearLayout>
